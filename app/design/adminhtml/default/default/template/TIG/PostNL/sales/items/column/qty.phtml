<?php $_salesHelper = Mage::helper('sales'); ?>
<?php $_item = $this->getItem(); ?>
<?php $_maxQty = $this->getMaxQtyForBuspakje(); ?>
<?php if ($_item): ?>
<table cellspacing="0" class="qty-table">
    <tr>
        <td><?php echo $_salesHelper->__('Ordered') ?></td>
        <td><strong><?php echo $_item->getQtyOrdered()*1 ?></strong></td>
    </tr>
    <?php if ((float) $_item->getQtyInvoiced()): ?>
        <tr>
            <td><?php echo $_salesHelper->__('Invoiced') ?></td>
            <td><strong><?php echo $_item->getQtyInvoiced()*1 ?></strong></td>
        </tr>
    <?php endif; ?>
    <?php if ((float) $_item->getQtyShipped()): ?>
        <tr>
            <td><?php echo $_salesHelper->__('Shipped') ?></td>
            <td><strong><?php echo $_item->getQtyShipped()*1 ?></strong></td>
        </tr>
    <?php endif; ?>
    <?php if ((float) $_item->getQtyRefunded()): ?>
        <tr>
            <td><?php echo $_salesHelper->__('Refunded') ?></td>
            <td><strong><?php echo $_item->getQtyRefunded()*1 ?></strong></td>
        </tr>
    <?php endif; ?>
    <?php if ((float) $_item->getQtyCanceled()): ?>
        <tr>
            <td><?php echo $_salesHelper->__('Canceled') ?></td>
            <td><strong><?php echo $_item->getQtyCanceled()*1 ?></strong></td>
        </tr>
    <?php endif; ?>
    <?php if ($_maxQty): ?>
        <tr style="white-space:nowrap;">
            <td><?php echo $this->__('Letter box qty') ?></td>
            <td><strong><?php echo ((float) $_maxQty) * 1 ?></strong></td>
        </tr>
    <?php endif; ?>
</table>
<?php endif; ?>
