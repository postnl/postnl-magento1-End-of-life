/**
 * Default Magento's order address form only supports billing and shipping addresses. We need to check if the current
 * address isn't a PakjeGemak address instead. f so, we need to change the header text accordingly.
 */
$_headerHtml = $this->getHeaderHtml();

$_address = Mage::registry('order_address');
if ($_address->getAddressType() == 'pakje_gemak') {
    $_orderId = $_address->getOrder()->getIncrementId();

    $_type = Mage::helper('postnl')->__('Post Office');

    $_headerText = Mage::helper('sales')->__('Edit Order %s %s Address', $_orderId, $_type);
    $_headerHtml = '<h3 class="' . $this->getHeaderCssClass() . '">' . $_headerText . '</h3>';
}
?>
<?php
/**
 * @see Mage_Adminhtml_Block_Widget_Form_Container
 */
?>
<?php echo $this->getFormInitScripts() ?>
<div class="content-header">
    <?php echo $_headerHtml ?>
    <p class="form-buttons"><?php echo $this->getButtonsHtml('header') ?></p>
</div>
<?php echo $this->getFormHtml() ?>
<?php if ($this->hasFooterButtons()): ?>
    <div class="content-footer">
        <p class="form-buttons"><?php echo $this->getButtonsHtml('footer') ?></p>
    </div>
<?php endif; ?>
<script type="text/javascript">
    editForm = new varienForm('edit_form', '<?php echo $this->getValidationUrl() ?>');
</script>
<?php echo $this->getFormScripts() ?>
